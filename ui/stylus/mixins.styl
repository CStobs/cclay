clearfix()
    zoom 1
    &:after
    &:before
        content ""
        display table
    &:after
        clear both

// Creates a simple vertical linear gradient.
linear-grad(topcolor, bottomcolor)
    background topcolor // Old browsers
    background -moz-linear-gradient(top,  topcolor 1%, bottomcolor 100%) // FF3.6+
    background -webkit-gradient(linear, left top, left bottom, color-stop(1%,topcolor), color-stop(100%,bottomcolor)) // Chrome,Safari4+
    background -webkit-linear-gradient(top,  topcolor 1%,bottomcolor 100%) // Chrome10+,Safari5.1+
    background -ms-linear-gradient(top,  topcolor 1%,bottomcolor 100%) // IE10+
    background linear-gradient(to bottom,  topcolor 1%,bottomcolor 100%) // W3C
    filter unquote('progid:DXImageTransform.Microsoft.gradient( startColorstr="topcolor", endColorstr="bottomcolor",GradientType=0 )') // IE6-9

// Creates a bottom shadow
shadow-right(alpha=0.5)
    -webkit-box-shadow: 2px 0px 5px rgba(50, 50, 50, alpha);
    -moz-box-shadow:    2px 0px 5px rgba(50, 50, 50, alpha);
    box-shadow:         2px 0px 5px rgba(50, 50, 50, alpha);
    
shadow-bottom(alpha=0.5)
    -webkit-box-shadow: 0px 2px 5px rgba(50, 50, 50, alpha);
    -moz-box-shadow:    0px 2px 5px rgba(50, 50, 50, alpha);
    box-shadow:         0px 2px 5px rgba(50, 50, 50, alpha);

shadow-bottom-right(alpha=0.5)
    -webkit-box-shadow: 5px 5px 15px rgba(50, 50, 50, alpha);
    -moz-box-shadow:    5px 5px 15px rgba(50, 50, 50, alpha);
    box-shadow:         5px 5px 15px rgba(50, 50, 50, alpha);

transition-duration(duration=0.2s)
    -webkit-transition-duration duration
    -moz-transition-duration duration
    transition-duration duration
    

// Creates rounded corners
round(topLeft=4px, topRight=4px, bottomRight=4px, bottomLeft=4px)
    -webkit-border-top-left-radius topLeft
    -webkit-border-top-right-radius topRight
    -webkit-border-bottom-right-radius bottomRight
    -webkit-border-bottom-left-radius bottom Left

    -moz-border-radius-topleft topLeft
    -moz-border-radius-topright topRight
    -moz-border-radius-bottomright bottomRight
    -moz-border-radius-bottomleft bottomLeft

    border-top-left-radius topLeft
    border-top-right-radius topRight
    border-bottom-right-radius bottomRight
    border-bottom-left-radius bottomLeft


round-all(px)
    round(px, px, px, px)


no-select()
    -webkit-user-select none
    -moz-user-select none
    -ms-user-select none
    user-select none